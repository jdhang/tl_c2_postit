<div class="row">
  <div class="col-md-8">
    <p>
      <%= render @post.categories %>
    </p>
    <%= render 'post_title', post: @post %>
    <div class="well">
      <p><%= @post.description %></p>
    </div>
    <hr>
  </div> 
</div>

<% if logged_in? %>
  <div class="row">
    <div class="col-md-4">
      <%= render 'comments/form' %>
    </div>
  </div>
<% end %>

<h5>Comments:</h5>
  <% @post.comments.order("created_at DESC").each do |comment| %>
  <div class="col-md-7">
    <div class="well">
      <%= render 'comments/comment', comment: comment %>
    </div>
  </div>
  <% end %>
