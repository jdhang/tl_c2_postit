<div class="row">
  <div class="col-md-2">
    <div class="posts well text-center">
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(post, comment, vote: true), method: "post", remote: true do %>
          <span class="glyphicon glyphicon-arrow-up"></span>
        <% end %>
      <% end %>
      <br/>
      <p id="comment_<%= comment.id %>_votes"><%= comment.total_votes %> votes</p>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(post, comment, vote: false), method: "post", remote: true do %>
          <span class="glyphicon glyphicon-arrow-down"></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="col-md-8">
    <div class="posts well">
      <% show_post ||= false %>

      <em>"<%= comment.body %>"
        <% if show_post %> 
          on <%= link_to comment.post.title, post_path(comment.post) %>
        <% end %>
      </em><br/>
      <span class="quiet">by <%= link_to comment.user.username, user_path(comment.user) %>
               at <%= display_datetime(comment.created_at) %>
      </span>
    </div>
  </div>
</div>