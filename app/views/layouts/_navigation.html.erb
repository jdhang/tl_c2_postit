<div class="navbar-header">
  <%= link_to "Postit!", root_path, :class => 'navbar-brand' %>
</div>
<ul class="nav navbar-nav">
  <% if logged_in? %>
    <li>
      <%= link_to 'New Post', new_post_path %>
    </li>
  <% end %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Categories <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
    <% if !@categories.empty? %>
      <% @categories.order("name ASC").each do |category| %>
        <li><%= link_to category.name, category_path(category) %></li>
      <% end %>
    <% else %>
      <li><%= link_to 'No Categories', '#' %></li>
    <% end %>
    <% if logged_in? %>
      <li role="presentation" class="divider"></li>
      <li><%= link_to 'Add New Category', new_category_path, style: "font-weight: bold" %></li>
    <% end %>
    </ul>
  </li>
</ul>
<ul class="nav navbar-nav navbar-right">
  <% if !logged_in? %>
    <li><%= link_to 'Register', register_path %></li>
    <li><%= link_to 'Login', login_path %></li>
  <% else %>
    <li><a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= current_user.username %> <span class="caret"></span>
        </a>
      <ul class="dropdown-menu" role="menu">
        <li><a href='/users/<%= current_user.id %>'><span class="glyphicon glyphicon-user"></span> View Profile</a></li>
        <li><a href="/users/<%= current_user.id %>/edit"><span class="glyphicon glyphicon-pencil"></span> Edit Profile</a></li>
        <li><a href="/logout"><span class="glyphicon glyphicon-remove-sign"></span> Log out</a></li>
      </ul>
    </li>
  <% end %>
</ul>  
